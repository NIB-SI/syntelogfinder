manifest {
  name = 'SyntelogFinder'
  description = 'A nextflow pipeline for finding syntenic genes in phased genome assemblies'
  author = 'nfn'
  version = '0.1.0'
  nextflowVersion = ">=22.10.0"
}



executor.cpus=30


report.overwrite = true
params.run_promotor_comparison = false
params.run_balst = false
params.mcscanx_path = false

// Process configuration
process {

    withName: AGAT_SPKEEPLONGESTISOFORM  {
        publishDir = [
            path: { "${params.outdir}/longestIsoform" },
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }]
    }

    withName: GFFREAD_PROT {
        ext.args = '-v -E -y -S'
    }

    withName: GFFREAD_BED {

        ext.args = '-v -E --bed'
    }

    withName: GENESPACE_PARSE {
        publishDir = [
            path: { "${params.outdir}/genespace" },
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }]
            ext.args = ''
    }

    withName: GFF_TO_PROMOTOR {
        publishDir = [
            path: { "${params.outdir}/Promotor_gff" },
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }]
    }

    withName: GFFREAD_TRANSCRIPT {

        ext.args = '-v -E -w'
        ext.prefix = { "${meta.id}.transcripts" }
    }

    withName: GFFREAD_GFF {

        ext.args = '-F --keep-exon-attrs'
    }

    withName: BLAST_MAKEBLASTDB {
            ext.args = '-dbtype nucl'
    }

    withName: BLAST_BLASTN {
        ext.args = '-outfmt 6'
    }

    withName: SYNTELOG_SIMILARITY {
        publishDir = [
            path: { "${params.outdir}/syntelog_similarity" },
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }]
    }

    withName: MINIMAP2_ALIGN {

        cpus = 2
        memory = 32.GB
        time = 0.5.h

        ext.args = '-ax splice:hq --eqx'  // For comparing promotors, adjust as needed
        ext.args2 = ''  // Additional arguments for samtools sort, if needed


    }

    withName: SVIM_ASM {
        ext.args = '--types INS,INV,DUP:TANDEM,DUP:INT,BND'  // To avoid getting the same INV/DEL twice
    }


    // TODO nf-core: Check the defaults for all processes
    cpus   = { 1      * task.attempt }
    memory = { 6.GB   * task.attempt }
    time   = { 4.h    * task.attempt }

    errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
    maxRetries    = 1
    maxErrors     = '-1'

    // Process-specific resource requirements
    // NOTE - Please try and re-use the labels below as much as possible.
    //        These labels are used and recognised by default in DSL2 files hosted on nf-core/modules.
    //        If possible, it would be nice to keep the same label naming convention when
    //        adding in your local modules too.
    // TODO nf-core: Customise requirements for specific processes.
    // See https://www.nextflow.io/docs/latest/config.html#config-process-selectors
    withLabel:process_single {
        cpus   = { 1                   }
        memory = { 6.GB * task.attempt }
        time   = { 4.h  * task.attempt }
    }
    withLabel:process_low {
        cpus   = { 2     * task.attempt }
        memory = { 12.GB * task.attempt }
        time   = { 4.h   * task.attempt }
    }
    withLabel:process_medium {
        cpus   = { 6     * task.attempt }
        memory = { 36.GB * task.attempt }
        time   = { 8.h   * task.attempt }
    }
    withLabel:process_high {
        cpus   = { 12    * task.attempt }
        memory = { 72.GB * task.attempt }
        time   = { 16.h  * task.attempt }
    }
    withLabel:process_long {
        time   = { 20.h  * task.attempt }
    }
    withLabel:process_high_memory {
        memory = { 200.GB * task.attempt }
    }

    withLabel:error_ignore {
        errorStrategy = 'ignore'
    }
    withLabel:error_retry {
        errorStrategy = 'retry'
        maxRetries    = 1
    }
}
